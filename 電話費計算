#include<stdio.h>  
int main(){  
    double m;  
    while(scanf("%lf",&m)!=EOF){  
        if(m<=800){  
            printf("%.1f\n",0.9*m);  
        }  
        if(m>800&&m<1500){  
            printf("%.1f\n",0.81*m);  
        }  
        if(m>=1500){  
            printf("%.1f\n",0.9*0.79*m);  
        }  
    }  
    return 0;  
}  
